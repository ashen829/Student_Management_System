                               FontWeight="Medium"
                               Foreground="DarkGray"
                               FontSize="18"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"/>

                            <Button Content=" User Registration"
                                    Command="{Binding OpenUserWindowCommand}"
                                Margin="0 40 0 0"
                                FontSize="14"
                                Height="50" Background="#FFDDDDDD"
                                   
                                >

                            </Button>



                            <Button Content="GPA Calculator"
                                    
                                Margin="0 40 0 0"
                                FontSize="14"
                                Height="50">

                            </Button>




                        </StackPanel>
                    </Grid>
                </Border>
            </Border>



